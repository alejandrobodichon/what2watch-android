<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="133dp"
    android:background="@color/whatowatch_dark_dark_grey"
    android:paddingTop="@dimen/spacing_big_extra">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/vNavHeaderPicture"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="@dimen/spacing_big_extra"
        android:layout_marginStart="@dimen/spacing_large"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:backgroundImage="@drawable/ic_circle_icons_profile"
        fresco:roundAsCircle="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/spacing_large_extra"
        app:layout_constraintLeft_toRightOf="@+id/vNavHeaderPicture"
        app:layout_constraintTop_toTopOf="@id/vNavHeaderPicture"
        app:layout_constraintBottom_toBottomOf="@id/vNavHeaderPicture">

        <TextView
            android:id="@+id/vNavHeaderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Antonio Contreras"
            android:textSize="25sp"
            android:textColor="@color/whatowatch_even_light_grey"
            style="@style/LatoRegular.Large.Black.Bold"/>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_small"
        android:background="@color/whatowatch_blue_button"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>