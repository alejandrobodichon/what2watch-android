<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llComment"
    android:orientation="vertical"
    android:background="@color/black_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/spacing_large">

    <TextView
        android:id="@+id/tvUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/spacing_medium_more"
        android:paddingBottom="4dp"
        android:paddingHorizontal="@dimen/spacing_medium_more"
        android:textSize="17sp"
        android:textAllCaps="true"
        android:textColor="@color/white_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Oscar"
        style="@style/LatoRegular.Medium.DarkGrey.Bold"/>

    <TextView
        android:id="@+id/tvComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/spacing_medium_more"
        android:paddingHorizontal="@dimen/spacing_medium_more"
        android:textSize="15sp"
        android:textColor="@color/white_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvUser"
        tools:text="Muy buena peli, la recomiendo."
        />

    <View
        android:id="@+id/vLine"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/whatowatch_blue_transparent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</LinearLayout>