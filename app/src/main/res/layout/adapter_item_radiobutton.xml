<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clItem"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@color/whatowatch_very_dark_red"
    android:paddingHorizontal="@dimen/spacing_large">

    <TextView
        android:id="@+id/tvGenreText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/spacing_medium_more"
        android:paddingBottom="@dimen/spacing_medium_more"
        android:paddingHorizontal="@dimen/spacing_medium_more"
        android:textSize="25sp"
        android:textColor="@color/whatowatch_dark_light_red"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Drama"
        style="@style/LatoRegular.Medium.DarkGrey.Bold"/>

    <RadioButton
        android:id="@+id/rbGenre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/whatowatch_white"
        android:clickable="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

    </RadioButton>


</androidx.constraintlayout.widget.ConstraintLayout>